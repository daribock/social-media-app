{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "lib": ["ESNext"],
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "dist",
        "strict": true,
        "skipLibCheck": false
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
